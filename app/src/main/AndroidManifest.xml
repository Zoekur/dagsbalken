<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Explicitly mark common hardware as optional for Wear devices/emulators -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:label="Dagsbalken"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="false"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dagsbalken">

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <!-- Wear support library makes the APK recognized as a watch app by tooling. -->
        <uses-library
            android:name="com.google.android.wearable"
            android:required="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".widget.LinearClockWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/linear_clock_widget_info" />
        </receiver>

        <receiver
            android:name=".widget.WeatherWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_weather_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/weather_widget_info" />
        </receiver>

        <receiver
            android:name=".widget.ClothingWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_clothing_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/clothing_widget_info" />
        </receiver>

        <activity
            android:name=".widget.LinearClockConfigActivity"
            android:exported="true"
            android:theme="@style/Theme.Dagsbalken" />

        <activity
            android:name=".AodActivity"
            android:exported="false"
            android:theme="@style/Theme.Dagsbalken"
            android:label="NattlÃ¤ge" />

        <service
            android:name=".service.AodDreamService"
            android:exported="true"
            android:permission="android.permission.BIND_DREAM_SERVICE"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.service.dream.DREAM_CONFIG_ACTIVITY"
                android:value="com.dagsbalken.app.AodActivity" />
        </service>

        <receiver
            android:name=".widget.BootCompletedReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>


</manifest>
